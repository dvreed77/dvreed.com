---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  frontmatter: {
    title: string;
  };
}

const { frontmatter } = Astro.props as Props;
---

<BaseLayout title={frontmatter.title}>
  <h1
    class="lg:text-left text-center text-4xl font-bold border-b border-gray-300 py-8"
  >
    {frontmatter.title}
  </h1>
  <div class="prose lg:prose-xl mt-8 mb-64">
    <slot />
  </div>
</BaseLayout>
